doctype html
html
    head
        title= title
        meta(name="viewport" content="width=device-width, initial-scale=1")/
        link(rel="icon" type="image/png" href="logo_umk32.png")
    body
        nav.navbar(role='navigation' aria-label='main navigation' class="is-info")
            .navbar-brand
                a.navbar-item(href='/')
                    img(src='logo-umk.png')
                a.navbar-burger.burger(role='button' aria-label='menu' aria-expanded='false' data-target='navbar-items')
                    span(aria-hidden='true')
                    span(aria-hidden='true')
                    span(aria-hidden='true')
            #navbar-items.navbar-menu
                .navbar-start
                    a.navbar-item(href='/')
                        | Home
                    a.navbar-item(href='about')
                        | O stronie
                .navbar-end
                    #user.navbar-item
                        img(src=user.image class="image is-50x50" )
                    .navbar-item
                        p #{user.name}
                    .navbar-item
                        .buttons
                            a.button.is-link(id="login" onclick='logInOut()')
                                | #{user.button}

        #main(class='container')

            block content

    footer.footer
        .content.has-text-centered
            p
                strong UMKUsers
